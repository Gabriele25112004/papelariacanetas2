@model Produto

<h1>
    ALERTA!
</h1>

<h2>
    Tem certeza que deseja Excluir o Produto "@Model.NomeProduto"?
</h2>

<form action="Excluir" method="post">


    <input type="hidden" name="id" value="@Model.Id">

    <input name="decisao" type="submit" value="EXCLUIR">
    <input name="decisao" type="submit" value="CANCELAR">

</form>